<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16325B"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/circle_background"
        android:layout_width="308dp"
        android:layout_height="308dp"
        android:layout_marginTop="-50dp"
        android:layout_marginStart="-50dp"
        android:src="@drawable/circle"
        android:backgroundTint="#F8D65A" />

    <ImageView
        android:id="@+id/doctor_image"
        android:layout_width="150dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/doctor" />

    <TextView
        android:id="@+id/main_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“We Are\nHere For\nYou”"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/doctor_image"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Come check your skin\ndisease"
        android:textColor="#F8D65A"
        android:textSize="16sp"
        android:layout_below="@id/main_quote"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/button_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:text="Let’s Get Started!"
        android:textColor="#0E2A47"
        android:backgroundTint="@color/abu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" />

</RelativeLayout>